{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "lib": ["es2022"],

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist",

    /* Emit */
    "sourceMap": true,
    "noEmitOnError": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Completeness */
    "skipLibCheck": true
  },

  // Explicitly include backend files
  "include": ["app.ts", "*.ts", "./**/*.ts"],
  "exclude": [
    "node_modules",
    "public",
    // Exclude specific frontend entry points
    "src/**/*"
  ]
}
